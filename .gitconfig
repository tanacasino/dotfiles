[user]
	name = Tomofumi Tanaka
	email = tanacasino@gmail.com

[color]
	ui = true
	status = always
	diff = always

[alias]
	a = add
	f = fetch --verbose
	fa = fetch --all --verbose --tags --prune
	co = checkout
	ci = commit -v
	st = status -sb
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	sp = show --stat -p

[core]
	excludesfile = ~/.gitignore
	editor = vim
	autoCRLF = false
	pager = less -SRFX

[diff]
	indentHeuristic = on

[credential]
	helper = cache --timeout=3600

[gui]
	encoding = utf-8

[ghq]
	root = ~/devel/src

[include]
	path = ~/.gitconfig.local

